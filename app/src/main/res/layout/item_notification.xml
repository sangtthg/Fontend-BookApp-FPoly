<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgNotification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/img_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingTop="@dimen/_8sdp"
        android:id="@+id/linearLayoutParentNotification"
        android:paddingHorizontal="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/display_bold"
            android:text="Hoàn tất thanh toán"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/notificationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="Xin chào LXV, đơn hàng giá trị 4375000 vui lòng thanh toán trước 7/27/2024, 6:52:07 AM. Vui lòng bỏ qua tin nhắn này nếu bạn đã thanh toán."
            android:textColor="#646161"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/notificationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="start"
            android:fontFamily="@font/roboto_regular"
            android:text="2024-07-27"
            android:textColor="#A8A5A5"
            android:textSize="@dimen/_10ssp" />

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginTop="@dimen/_8sdp"-->
<!--            android:background="#E0E0E0" />-->

    </LinearLayout>

</LinearLayout>