<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_83sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/imgBookOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_holder" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:text="Tiêu đề sách"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/textview_border"
            android:paddingHorizontal="@dimen/_3sdp"
            android:paddingVertical="@dimen/_1sdp"
            android:text="Đổi ý miễn phí"
            android:textColor="#FF7043"
            android:textSize="@dimen/_8ssp" />

        <TextView
            android:id="@+id/itemGiaMoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:fontFamily="@font/display_medium"
            android:text="132.000 VNĐ"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/_12sdp">


            <TextView
                android:id="@+id/itemGiaCu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/display_regular"
                android:text="165.000 VNĐ"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/itemSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/display_regular"
                android:text="x6"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/_11ssp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>