<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView làm nền -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/anh4" />

    <!-- LinearLayout chứa các TextView và Button chèn lên ImageView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/_100sdp"> <!-- Thay đổi paddingTop theo nhu cầu -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_120sdp"
            android:fontFamily="@font/poppinsm"
            android:text="Chào Mừng Đến \nBookMarket App"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/font_family"
            android:text="@string/startDesc"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:backgroundTint="#F4F6FC"
            android:fontFamily="@font/font_kpmt"
            android:padding="8dp"
            android:text="Bắt đầu"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp"
            app:cornerRadius="12dp" />

    </LinearLayout>

</FrameLayout>
