<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".home.view.ShoppingCartActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backDetailButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvCartTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/display_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="Giỏ hàng"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16ssp" />


            <ImageButton
                android:id="@+id/btnCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_selector"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/ic_cart_edit" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_weight="1"
        android:background="@color/backgroundColor"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_2sdp"
        android:paddingVertical="@dimen/_3sdp">

        <ImageButton
            android:id="@+id/btnCallNow"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@drawable/phone_call" />

<!--        <View-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="@dimen/_28sdp"-->
<!--            android:layout_marginHorizontal="@dimen/_8sdp"-->
<!--            android:background="#cacaca" />-->

<!--        <ImageButton-->
<!--            android:id="@+id/btnAddToCart"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="@dimen/_35sdp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@color/transparent"-->
<!--            android:src="@drawable/add_to_cart" />-->

        <Button
            android:id="@+id/btnMuaNgay"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_weight="3"
            android:backgroundTint="#aa0116"
            android:text="Thanh toán"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />
    </LinearLayout>

</LinearLayout>
