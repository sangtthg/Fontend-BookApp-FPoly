<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewTerms1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/dksd1" />

        <ImageView
            android:id="@+id/imageViewTerms2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/dksd2" />

        <Button
            android:id="@+id/btnAcceptTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chấp nhận điều khoản"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnDeclineTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Từ chối"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
