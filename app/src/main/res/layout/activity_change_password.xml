<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_28sdp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@drawable/baseline_keyboard_backspace_24" />


    <LinearLayout
        android:id="@+id/form_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="Thay đổi mật khẩu"
            android:textColor="#2B2B2B"
            android:textSize="@dimen/_32sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="Điền chính xác mật khẩu"
            android:textColor="#707B81"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"

            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"

                android:text="Mật khẩu hiện tại"
                android:textColor="#2B2B2B"
                android:textSize="@dimen/_13sdp" />
            <EditText
                android:id="@+id/edtOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_medium"
                android:background="@drawable/rounded_edittext"
                android:hint="Mật khẩu hiện tại"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:textColor="#6A6A6A" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Mật khẩu mới"
                android:textColor="#2B2B2B"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_edittext"

                android:fontFamily="@font/roboto_medium"
                android:hint="Mật khẩu mới"

                android:maxLines="1"
                android:padding="@dimen/_10sdp"

                android:singleLine="true"

                android:textColor="#6A6A6A" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Nhập lại mật khẩu mới"
                android:textColor="#2B2B2B"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_medium"
                android:background="@drawable/rounded_edittext"
                android:padding="@dimen/_10sdp"
                android:hint="Nhập lại mật khẩu"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#6A6A6A" />


        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            tools:context=".MainActivity">

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:id="@+id/btnChangePassword"
                android:text="Xác Nhận Đổi Mật Khẩu"
                android:textColor="@android:color/white"
                app:backgroundTint="#aa0116"
                app:cornerRadius="50dp"
                app:fontFamily="@font/font_dn" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
