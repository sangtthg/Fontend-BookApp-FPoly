<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="@dimen/_2sdp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"> <!-- Sử dụng drawable selector cho hiệu ứng khi chạm -->

        <ImageView
            android:id="@+id/imageViewBookSearch"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp"
            android:src="@drawable/icons8_search" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/textViewBookSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/display_medium"
                android:gravity="center_vertical"
                android:text="Sách thiếu nhi"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="wrap_content"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/textViewBookPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/display_regular"
                android:gravity="center_vertical"
                android:text="Giá: 100,000đ"
                android:textColor="#E91E63"
                android:maxLines="2"
                android:textAlignment="inherit"
                android:textSize="@dimen/_10ssp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Đã bán:"
                    android:textColor="#757575"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/txtDaBan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="106"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9ssp" />


            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
