<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color of the dialog -->
            <corners android:radius="8dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent color for shadow effect -->
            <corners android:radius="8dp"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"/>
            <size
                android:width="1dp"
                android:height="1dp"/>
            <gradient
                android:startColor="#80000000"
                android:endColor="#00000000"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>
