<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Màu nền khi chạm -->
            <corners android:radius="8dp"/> <!-- Bo tròn góc -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền không chạm -->
            <corners android:radius="8dp"/> <!-- Bo tròn góc -->
            <stroke android:width="1dp" android:color="#DDDDDD"/> <!-- Đường viền -->
        </shape>
    </item>
</selector>
