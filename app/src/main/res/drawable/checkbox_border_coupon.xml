<!-- res/drawable/checkbox_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Background Shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/checked_color" />
                    <corners android:radius="15dp" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <!-- Checkmark -->
            <item android:drawable="@drawable/checkmark_white"
                android:gravity="center" />
        </layer-list>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/unchecked_color" />
            <corners android:radius="12dp" />
            <size android:width="24dp" android:height="24dp" />
            <stroke android:color="@color/grayColor" android:width="2dp" />
        </shape>
    </item>
</selector>
