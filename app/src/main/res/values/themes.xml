<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Fontend_BookApp_FPoly" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:popupTheme">@color/white</item>
        <item name="android:popupMenuStyle">@color/white</item>

        <item name="colorPrimary">@color/colorRedM</item>
        <item name="colorPrimaryDark">@color/colorRedM</item>
        <item name="colorAccent">@color/colorRedM</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

        <!-- Customize Dialog -->
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#000000</item>
        <item name="material_dialog_message_text_color">#5F5F5F</item>
        <item name="material_dialog_positive_button_color">@color/colorRedM</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
        <item name="material_dialog_negative_button_text_color">@color/colorRedM</item>

    </style>

    <style name="RoundedDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedDialog</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>



    <style name="Theme.Fontend_BookApp_FPoly" parent="Base.Theme.Fontend_BookApp_FPoly" />
    <style name="Theme.Fontend_BookApp_FPoly.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Fontend_BookApp_FPoly.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Fontend_BookApp_FPoly.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Theme.OnboardingPractice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>